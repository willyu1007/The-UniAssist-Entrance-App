{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/conversion-plan.schema.json",
  "title": "Knowledge-to-Skills Conversion Plan",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "skills_root",
    "skills"
  ],
  "properties": {
    "version": {
      "type": "string",
      "minLength": 1
    },
    "skills_root": {
      "type": "string",
      "minLength": 1,
      "description": "Output directory for generated skills."
    },
    "layout": {
      "type": "string",
      "enum": [
        "flat",
        "categorized"
      ],
      "default": "categorized"
    },
    "default_taxonomy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tier1": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        },
        "tier2": {
          "type": "string",
          "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
        }
      }
    },
    "operations": {
      "type": "array",
      "description": "Optional human-readable log of split/merge decisions.",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "type",
          "detail"
        ],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "split",
              "merge",
              "rename",
              "move",
              "drop"
            ]
          },
          "detail": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "skills": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "title",
          "description",
          "sources"
        ],
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$",
            "description": "Skill directory name and frontmatter name."
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "One sentence used for skill discovery."
          },
          "tier1": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "tier2": {
            "type": "string",
            "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
          },
          "sources": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "path"
              ],
              "properties": {
                "path": {
                  "type": "string",
                  "minLength": 1
                },
                "why": {
                  "type": "string"
                }
              }
            }
          },
          "create": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "reference": {
                "type": "boolean",
                "default": true
              },
              "examples": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "templates": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    }
  }
}