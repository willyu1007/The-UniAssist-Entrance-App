import { agentError } from './errors.mjs';

/**
 * Execute {{tool_id}} via MCP server
 * 
 * @param {object} input - Tool input matching input_schema
 * @param {object} context - Execution context
 * @param {object} context.manifest - Agent manifest
 * @param {string} context.contract_version - Contract version
 * @param {object} context.mcpClient - MCP client instance
 * @param {object} context.logger - Logger instance (optional)
 * @returns {Promise<{ok: boolean, output?: object, error?: object}>}
 */
export async function {{tool_id}}(input, { manifest, contract_version, mcpClient, logger }) {
  const startTime = Date.now();
  const spec = manifest.tools?.tools?.find(t => t.id === '{{tool_id}}');
  
  // Validate MCP client
  if (!mcpClient) {
    return {
      ok: false,
      error: agentError({
        contract_version,
        code: 'tool_config_error',
        message: '{{tool_id}}: MCP client not available',
        retryable: false
      })
    };
  }
  
  // Check MCP server connection
  if (!mcpClient.isConnected || !mcpClient.isConnected()) {
    return {
      ok: false,
      error: agentError({
        contract_version,
        code: 'mcp_not_connected',
        message: '{{tool_id}}: MCP server not connected',
        retryable: true
      })
    };
  }
  
  const timeoutMs = spec?.timeouts?.timeout_ms || {{timeout_ms}};
  
  try {
    // Call MCP tool with timeout
    const result = await Promise.race([
      mcpClient.callTool({
        name: '{{tool_id}}',
        arguments: input
      }),
      new Promise((_, reject) =>
        setTimeout(() => reject(new Error('MCP call timeout')), timeoutMs)
      )
    ]);
    
    // Check for MCP-level errors
    if (result.isError) {
      // Audit logging for MCP errors
      if (spec?.audit?.required && logger) {
        logger.error({
          event: 'tool_failed',
          tool_id: '{{tool_id}}',
          duration_ms: Date.now() - startTime,
          error: 'MCP tool returned error',
          mcp_error: result.content?.[0]?.text
        });
      }
      
      return {
        ok: false,
        error: agentError({
          contract_version,
          code: 'mcp_tool_error',
          message: `{{tool_id}}: ${result.content?.[0]?.text || 'MCP tool failed'}`,
          retryable: false,
          details: {
            mcp_content: result.content
          }
        })
      };
    }
    
    // Parse MCP response content
    let output;
    if (result.content && Array.isArray(result.content)) {
      // Handle different content types
      const textContent = result.content.find(c => c.type === 'text');
      const jsonContent = result.content.find(c => c.type === 'json' || c.mimeType === 'application/json');
      
      if (jsonContent) {
        output = typeof jsonContent.data === 'string' 
          ? JSON.parse(jsonContent.data) 
          : jsonContent.data;
      } else if (textContent) {
        // Try to parse as JSON, fallback to text
        try {
          output = JSON.parse(textContent.text);
        } catch {
          output = { text: textContent.text };
        }
      } else {
        output = { content: result.content };
      }
    } else {
      output = result;
    }
    
    // Audit logging
    if (spec?.audit?.required && logger) {
      logger.info({
        event: 'tool_executed',
        tool_id: '{{tool_id}}',
        duration_ms: Date.now() - startTime,
        success: true
      });
    }
    
    return { ok: true, output };
    
  } catch (err) {
    // Audit logging for failures
    if (spec?.audit?.required && logger) {
      logger.error({
        event: 'tool_failed',
        tool_id: '{{tool_id}}',
        duration_ms: Date.now() - startTime,
        error: err.message
      });
    }
    
    const isTimeout = err.message.includes('timeout');
    const isConnection = err.message.includes('connection') || err.message.includes('ECONNREFUSED');
    
    return {
      ok: false,
      error: agentError({
        contract_version,
        code: isTimeout ? 'tool_timeout' : 'mcp_exception',
        message: `{{tool_id}}: ${err.message}`,
        retryable: isTimeout || isConnection
      })
    };
  }
}
